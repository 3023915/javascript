<body>
    <div class="h">
        <h1>Calcular e exibir a área de um quadrado </h1>
    </div>
    <div class="col">
        <script lang="JavaScript">

            var l, d, y, a;
        
            l = parseFloat(window.prompt("Informe a diagonal de um quadrado","0"));

            document.write("<h4 class='c'> A diagonal é igual a " + l + "</h4>");

            a = parseFloat(l * l);

            y = parseFloat(a / 2);

            d = parseFloat(Math.sqrt(y));

            document.write("<h4 class='c'> A área do quadrado é: " + a + "</h4>");
        </script>
        </div>
    </div>
